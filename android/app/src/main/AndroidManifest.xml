<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    
    <application
        android:label="void_space"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher">

        <!-- MAIN APP ACTIVITY (Splash -> Home) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:taskAffinity=""
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">

            <!-- Flutter normal theme -->
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <!-- LAUNCHER -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- SHARE HANDLER ACTIVITY (Floating Orb) -->
        <activity
            android:name=".ShareHandlerActivity"
            android:theme="@style/ShareTheme"
            android:exported="true"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true">

            <!-- ðŸ”¥ NEW: Point to the specific Dart entry point -->
            <meta-data
                android:name="io.flutter.Entrypoint"
                android:value="shareMain" />

            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <!-- Flutter embedding meta -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

    </application>

    <!-- Needed for text processing interactions -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

</manifest>