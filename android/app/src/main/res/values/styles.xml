<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Splash / launch theme -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- Normal Flutter theme -->
    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- ✅ Share floating loader theme (Transparent Overlay) -->
    <style name="ShareTheme" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/ShareWindowAnimation</item>
    </style>

    <!-- ✅ Simple fade animation (exists everywhere) -->
    <style name="ShareWindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>
